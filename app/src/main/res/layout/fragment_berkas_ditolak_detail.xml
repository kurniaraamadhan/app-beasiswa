<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".BerkasDitolakDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Berkas Ditolak"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Berkas"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_detail_berkas_nim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIM Mahasiswa: 1234567890"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_berkas_jenis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Berkas: Transkrip Nilai"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_berkas_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Verifikasi: Ditolak Pemprov"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_berkas_alasan_ditolak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alasan Penolakan: Dokumen tidak lengkap dan buram."
                    android:textColor="#D32F2F"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Mahasiswa Terkait"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_detail_mahasiswa_nama_berkas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Mahasiswa: Nama Lengkap"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_mahasiswa_prodi_berkas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Program Studi: Teknik Informatika"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_lihat_berkas_asli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIHAT BERKAS ASLI"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            app:cornerRadius="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_kembali_ke_daftar_ditolak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KEMBALI KE DAFTAR DITOLAK"
            style="@style/Widget.Material3.Button.TextButton"
            android:textColor="#009688"
            android:padding="14dp"
            app:cornerRadius="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>