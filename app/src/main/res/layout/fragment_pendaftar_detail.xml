<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PendaftarDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pendaftar Beasiswa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Pribadi"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_detail_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama: Nama Lengkap Mahasiswa"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_nim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIM: 1234567890"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_tanggal_lahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir: DD/MM/YYYY"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_detail_jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin: Laki-laki"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_nomor_telepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telp: 08123456789"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_detail_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: mahasiswa@kampus.ac.id"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_detail_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat: Jl. Contoh No. 123, Kota ABC"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Akademik"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_detail_prodi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Program Studi: Teknik Informatika"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_angkatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Angkatan: 2023"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_detail_ipk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IPK: 3.85"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Pendaftaran"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_detail_status_pendaftaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Menunggu Verifikasi Pemprov"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/tv_detail_pesan_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berkas sedang dalam proses pemeriksaan oleh tim verifikator."
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berkas yang Diunggah"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_uploaded_berkas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_berkas_uploaded"/>

                <TextView
                android:id="@+id/tv_no_uploaded_berkas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum ada berkas diunggah untuk pendaftar ini."
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_edit_data_pendaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT DATA PENDAFTAR"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            app:cornerRadius="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>