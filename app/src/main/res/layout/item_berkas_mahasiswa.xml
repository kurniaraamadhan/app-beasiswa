<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_berkas_nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM: 2023001"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_berkas_jenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Berkas: Surat Keterangan Mahasiswa"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_berkas_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Pending"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_tolak_berkas"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tolak"
                android:textColor="#D32F2F"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_setujui_berkas"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setujui"
                android:textColor="#4CAF50"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>