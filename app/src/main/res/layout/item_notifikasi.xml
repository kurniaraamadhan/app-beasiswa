<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_notifikasi_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/ic_info"
        app:tint="#009688"/> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_notifikasi_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Notifikasi Penting"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/tv_notifikasi_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi singkat mengenai notifikasi ini."
        android:textColor="#666666"
        android:textSize="13sp"/>

</LinearLayout>

</LinearLayout>