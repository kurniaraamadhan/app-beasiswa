<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_pendaftar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa Lengkap"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_pendaftar_nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM: 1234567890"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_pendaftar_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Menunggu Verifikasi"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btn_view_detail"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Lihat Detail"
            android:textColor="#009688"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="#009688"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>